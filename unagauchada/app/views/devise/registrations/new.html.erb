<br><br><br>
<h2 class="titulos_sesion" >Regístrarse</h2>
<div class="form-group" id="id_registrarse">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre, autofocus: true, required: true, :class  => 'form_control' %>
  </div>
  <div class="field">
    <%= f.label :apellido %><br />
    <%= f.text_field :apellido, autofocus: true, required: true, :class  => 'form_control' %>
  </div>
  <div class="field">
    <%= f.label :telefono %><br />
    <%= f.text_field :telefono, autofocus: true, required: true, :class  => 'form_control' %>
  </div>
  <div class="field">
    <%= f.label :fecha_de_nacimiento %><br />
    <%= f.date_select :fecha_de_nacimiento, {order: [:day, :month,  :year], prompt: { day: 'Dia', month: 'Mes', year: 'Año' }, start_year: Date.today.year , end_year: Date.today.year - 100}, required: true %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, required: true, :class  => 'form_control' %>
  </div>

  <div class="field">
    <%= f.label "Contraseña" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres como mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", required: true, :class  => 'form_control' %>
  </div>

  <div class="field">
    <%= f.label "Confirmar Contraseña" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", required: true, :class  => 'form_control' %>
  </div>
    <div class="field">
  <%= f.label "Imagen" %> <br />
 <%= f.file_field :cover %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarse",  :class => 'btn btn-default' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>