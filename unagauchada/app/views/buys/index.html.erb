
<br><br><br>
<h1 class="titulos_sesion">Compras</h1>

<table>
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Precio total</th>
      <th>Precio actual</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buys.each do |buy| %>
      <tr>
        <td><%= buy.cantidad %></td>
        <td><%= buy.precio_total %></td>
        <td><%= buy.precio_actual %></td>
        <td><%= buy.fecha %></td>
        <td><%= link_to 'Show', buy %></td>
        <!--<td><%= link_to 'Edit', edit_buy_path(buy) %></td>
        <td><%= link_to 'Destroy', buy, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p id="notice"><%= notice %></p>
<%= link_to 'Nueva compra', new_buy_path, :class => 'link_gauchadas' %>
